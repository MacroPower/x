{
  "name": "Devbox Remote Container",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "..",
    "args": {
      "TZ": "${localEnv:TZ:America/New_York}",
      "CLAUDE_CODE_VERSION": "latest",
      "HOST_HOME": "${localEnv:HOME}"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "remoteUser": "devbox",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/devbox/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude.json,target=/home/devbox/.claude.json,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/git,target=/home/devbox/.config/git,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/ccstatusline,target=/home/devbox/.config/ccstatusline,type=bind,consistency=cached",
    "source=bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=devbox-${devcontainerId},target=/workspace/.devbox,type=volume",
    "source=gomodcache-${devcontainerId},target=/home/devbox/go/pkg/mod,type=volume",
    "source=gobuildcache-${devcontainerId},target=/home/devbox/.cache/go-build,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "TERM": "xterm-256color"
  },
  "remoteEnv": {
    "COLORTERM": "${localEnv:COLORTERM}",
    "TERM_PROGRAM": "${localEnv:TERM_PROGRAM}",
    "TERM_PROGRAM_VERSION": "${localEnv:TERM_PROGRAM_VERSION}"
  }
}
